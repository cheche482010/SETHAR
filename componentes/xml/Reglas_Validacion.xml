<validations>
    <validation>
        <name>
            cedula
        </name>
        <description>
            Validación de cédula
        </description>
        <pattern>
            /^([0-9]{7,9})$/
        </pattern>
    </validation>
    <validation>
        <name>
            caracteres
        </name>
        <description>
            Validación de caracteres
        </description>
        <pattern>
            /^[a-zA-Z0-9Ññáéíóú \b]{1,100}$/
        </pattern>
    </validation>
    <validation>
        <name>
            rif
        </name>
        <description>
            Validación de RIF
        </description>
        <pattern>
            /^([vejpgVEJPG]{1})([0-9]{9})$/
        </pattern>
    </validation>
    <validation>
        <name>
            enteros
        </name>
        <description>
            Validación de enteros
        </description>
        <pattern>
            /^([0-9]{1,2})$/
        </pattern>
    </validation>
    <validation>
        <name>
            decimal
        </name>
        <description>
            Validación de decimal
        </description>
        <pattern>
            /^[-+]?\d+([.,]\d+)?$/
        </pattern>
    </validation>
    <validation>
        <name>
            dinero
        </name>
        <description>
            Validación de dinero
        </description>
        <pattern>
            /^^\d{1,3}(?:\.\d\d\d)*(?:,\d{1,2})?$/
        </pattern>
    </validation>
    <validation>
        <name>
            BASE64
        </name>
        <description>
            Validación de BASE64
        </description>
        <pattern>
            /^[a-zA-Z0-9\/\r\n+]*={0,2}$/
        </pattern>
    </validation>
    <validation>
        <name>
            numero_casa
        </name>
        <description>
            Validación de número de casa
        </description>
        <pattern>
            /[a-zA-Z0-9]+\.?(( |\-)[a-zA-Z0-9]+\.?)*/
        </pattern>
    </validation>
    <validation>
        <name>
            password
        </name>
        <description>
            Validación de contraseña
        </description>
        <pattern>
            /(?=^.{4,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$/
        </pattern>
    </validation>
    <validation>
        <name>
            telefono
        </name>
        <description>
            Validación de teléfono
        </description>
        <pattern>
            /0{0,2}([\+]?[\d]{1,3} ?)?([\(]([\d]{2,3})[)] ?)?[0-9][0-9 \-]{6,}( ?([xX]|([eE]xt[\.]?)) ?([\d]{1,5}))?/
        </pattern>
    </validation>
    <validation>
        <name>
            fecha
        </name>
        <description>
            Validación de fecha
        </description>
        <pattern>
            /^(\d{4}|\d{2})-(0[1-9]|1[0-2])-(0[1-9]|[12]\d|3[01])$/
        </pattern>
    </validation>
    <validation>
        <name>
            hora
        </name>
        <description>
            Validación de hora
        </description>
        <pattern>
            /^(0?[1-9]|1[0-2])(:[0-5][0-9])?(:[0-5][0-9])?\s?(am|pm|AM|PM)?$/
        </pattern>
    </validation>
    <validation>
        <name>
            correo
        </name>
        <description>
            Validación de correo electrónico
        </description>
        <pattern>
            /^(([A-Za-z0-9]+_+)|([A-Za-z0-9]+\-+)|([A-Za-z0-9]+\.+)|([A-Za-z0-9]+\++))*[A-Za-z0-9]+@((\w+\-+)|(\w+\.))*\w{1,63}\.[a-zA-Z]{2,6}$/
        </pattern>
    </validation>
    <validation>
        <name>
            url
        </name>
        <description>
            Validación de URL
        </description>
        <pattern>
            /^(https?:\/\/)?([\da-z\.-]+)\.([a-z\.]{2,6})([\/\w \.-]*)*\/?$/
        </pattern>
    </validation>
    <validation>
        <name>
            codigo_postal
        </name>
        <description>
            Validación de código postal
        </description>
        <pattern>
            /^[0-9]{5}$/
        </pattern>
    </validation>
    <validation>
        <name>
            numero_tarjeta
        </name>
        <description>
            Validación de número de tarjeta de crédito
        </description>
        <pattern>
            /^[0-9]{16}$/
        </pattern>
    </validation>
    <validation>
        <name>
            codigo_seguridad
        </name>
        <description>
            Validación de código de seguridad de tarjeta de crédito
        </description>
        <pattern>
            /^[0-9]{3}$/
        </pattern>
    </validation>
    <validation>
        <name>
            fecha_expiracion
        </name>
        <description>
            Validación de fecha de expiración de tarjeta de crédito
        </description>
        <pattern>
            /^(0[1-9]|1[0-2])\/?([0-9]{4}|[0-9]{2})$/
        </pattern>
    </validation>
    <validation>
        <name>
            ipv4
        </name>
        <description>
            Validación de dirección IP (IPv4)
        </description>
        <pattern>
            /^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$/
        </pattern>
    </validation>
    <validation>
        <name>
            ipv6
        </name>
        <description>
            Validación de dirección IP (IPv6)
        </description>
        <pattern>
            /^((?=.*::)(?!.*::.+::)(::)?([\da-fA-F]{1,4}(:|(?!\s*\2:)\2)){7}|([\da-fA-F]{1,4}:){6})([\da-fA-F]{1,4})(\2([\da-fA-F]{1,4})(\3([\da-fA-F]{1,4})(\4([\da-fA-F]{1,4})(\5([\da-fA-F]{1,4})(\6([\da-fA-F]{1,4})\7?)?)?)?)?)?$/
        </pattern>
    </validation>
    <validation>
        <name>
            hexadecimal
        </name>
        <description>
            Validación de color hexadecimal
        </description>
        <pattern>
            /^#?([a-fA-F0-9]{6}|[a-fA-F0-9]{3})$/
        </pattern>
    </validation>
    <validation>
        <name>
            imagen
        </name>
        <description>
            Validación de archivo de imagen
        </description>
        <pattern>
            /\.(jpg|jpeg|png|gif)$/i
        </pattern>
    </validation>
    <validation>
        <name>
            audio
        </name>
        <description>
            Validación de archivo de audio
        </description>
        <pattern>
            /\.(mp3|wav|ogg)$/i
        </pattern>
    </validation>
    <validation>
        <name>
            documento
        </name>
        <description>
            Validación de archivo de documento
        </description>
        <pattern>
            /\.(doc|docx|pdf|txt)$/i
        </pattern>
    </validation>
</validations>
